<!--index.wxml-->
<view class="container">
  <image mode="{{mode}}" src="{{src}}"></image>
</view>
<view>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" next-margin="0px">
    <block wx:for="{{bannerImg}}" wx:key="*this" >
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="100%"></image>
      </swiper-item>
    </block>
  </swiper>
</view>